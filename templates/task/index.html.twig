{% extends 'base.html.twig' %}

{% block title %}Task index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Task Index</h1>

    {% if tasks|length > 0 %}
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Starting Date</th>
                    <th scope="col">Due Date</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr>
                    <th scope="row">{{ task.title }}</th>
                    <td>{{ task.description }}</td>
                    <td>{{ task.startingDate ? task.startingDate|date('Y-m-d H:i:s') : 'N/A' }}</td>
                    <td>{{ task.dueDate ? task.dueDate|date('Y-m-d H:i:s') : 'N/A' }}</td>
                    <td>
                        <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-warning" role="alert">
            No tasks found, you can create one by clicking the button below.
        </div>
    {% endif %}

    <a href="{{ path('app_task_new') }}" class="btn btn-success">Create New Task</a>
</div>
{% endblock %}
